<h1> Burgers To Smash</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
          {{!-- lists out each of the burgers --}}
        <ul>
        {{#each burgers}}
        {{!-- checks if that burger.id is eaten or not, only shows if its NOT --}}
          {{#unless this.devoured}}
            <li>
                <p>{{this.id}}. {{this.burger_name}}</p>
                {{!-- making a button to POST method when hit submit, updating that burger to devoured --}}
              <form method="POST" action="/burgers/update">
              <input type="hidden" name="burgerToEat" type="text" value={{this.id}}>
              <button type="submit" class="btn btn-default">Devour Me</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
        </ul>
      </div>

      <div class="col s6">
          Devoured Burgers:
        {{#each burgers}}
        {{!-- checks if that burger is eaten or not, only shows if it IS eaten --}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}} has been devoured.
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>


<div class="row">
  <div class="col s12">
    <form action="/burgers/create" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>


