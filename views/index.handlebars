<h1> Burgers To Smash</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
          {{!-- lists out each of the burgers --}}
        <ul>
        {{#each burgers}}
        {{!-- checks if that burger.id is eaten or not, only shows if its NOT --}}
          {{#unless this.devoured}}
            {{> available}}
          {{/unless}}
        {{/each}}
        </ul>
      </div>

      <div class="col s6" id="notAvailable">
          Devoured Burgers:
        {{#each burgers}}
        {{!-- checks if that burger is eaten or not, only shows if it IS eaten --}}
          {{#if devoured}}
                {{> notAvailable}}
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>


<div class="row">
  <div class="col s12">
      <input type="text" id="newBurger" name="burger_name" placeholder="Enter New Burger Here">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>


